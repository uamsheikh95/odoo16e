<?xml version="1.0" encoding="utf-8"?>
<odoo>
		<record id="sales_by_item_form" model="ir.ui.view">
			<field name="name">mgs_sale.sales_by_item.form</field>
			<field name="model">mgs_sale.sales_by_item</field>
			<field name="arch" type="xml">
			   <form>
					<sheet>
						<group>
							<group>
								<field name="date_from" string = "From" required="1" />
								<field name="product_id" options="{'no_create': True}" />
								<field name="user_id" options="{'no_create': True}" />
								<field name="company_id" groups="base.group_multi_company" options="{'no_create': True}" />
							</group>


							<group>
								<field name="date_to" string="To" required="1" />
								<field name="parent_categ_id" options="{'no_create': True}" />
								<field name="categ_id" options="{'no_create': True}" />
								<field name="report_by" widget="radio"/>
							</group>
						</group>
					</sheet>

				<footer>
					<button name="confirm" string="PDF" type="object" class="oe_highlight"/>
					<button name="export_to_excel" string="EXCEL" type="object" class="oe_highlight"/>
					<button string="Cancel" special="cancel"/>
				</footer>

			   </form>
			</field>
		</record>



		<record id="action_sales_by_item_report" model="ir.actions.act_window">
			<field name="name">Generate Sales by Item Report</field>
			<field name="res_model">mgs_sale.sales_by_item</field>
			<field name="type">ir.actions.act_window</field>
			<field name="view_id" ref="sales_by_item_form"/>
			<field name="target">new</field>
		</record>


    <menuitem id="menu_sale_by_item_report" name="Sales by Item" parent="menu_mgs_sale_report" action="action_sales_by_item_report" sequence="2" />

</odoo>
