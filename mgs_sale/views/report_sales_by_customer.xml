<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <report
        id="action_sales_by_customer"
        name="mgs_sale.sales_by_customer_report"
        model="mgs_sale.sales_by_customer_report"
        string="Sales by Customer"
        report_type="qweb-html"
        paperformat="mgs_sale_paperformat"
        />

        <template id="sales_by_customer_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.internal_layout" t-lang="en_US">
                        <div class="page">
                            <style>
                                <!-- .table-sm > thead > tr > th {
                                    border-top: 2px solid #212529 !important;
                                    border-bottom: 2px solid #212529 !important;
                                } -->

                                th,td {
                                    border-top: 1.5px solid #212529 !important;
                                    border-bottom: 1.5px solid #212529 !important;
                                }
                            </style>

                            <div class="container" style="font-size:12px;font-family:Arial;margin-top:1px;">
                                <h2>Sales by Customer <span t-esc="report_by"/></h2>

                                <div class="row" style="margin-top: 32px !important;font-size: 1.2em; font-family: 'Lato-Reg'">

                                    <div class="col-3" t-if="date_from or date_to">
                                        <strong>Date:</strong>
                                        <p t-esc="date_from" style="margin-bottom: 0"/>
                                        <p t-esc="date_to"/>
                                    </div>

                                    <div class="col-3" t-if="partner_id[0]">
                                        <strong>Partner:</strong>
                                        <p class="m-0" t-esc="partner_id[1]"/>
                                    </div>

                                    <div class="col-3" t-if="user_id[0]">
                                        <strong>Salesperson:</strong>
                                        <p class="m-0" t-esc="user_id[1]"/>
                                    </div>

                                    <div class="col-4" t-if="company_id"  groups="base.group_multi_company">
                                        <strong>Company:</strong>
                                        <p t-esc="company_id.name"/>
                                    </div>


                            </div>

                            <table class="table table-condensed table-sm">
                                <thead>
                                    <tr>
                                        <th nowrap="nowrap">Customer</th>
                                        <th nowrap="nowrap"><t t-if="report_by == 'Detail'">Date</t></th>
                                        <th nowrap="nowrap"><t t-if="report_by == 'Detail'">Order</t></th>
                                        <th nowrap="nowrap"><t t-if="report_by == 'Detail'">Salesperson</t></th>
                                        <th nowrap="nowrap"><t t-if="report_by == 'Detail'">Item</t></th>
                                        <th style="text-align: right" nowrap="nowrap">Ordered Qty</th>
                                        <th style="text-align: right" nowrap="nowrap">Delivered Qty</th>
                                        <th style="text-align: right" nowrap="nowrap">Invoiced Qty</th>
                                        <th style="text-align: right" nowrap="nowrap">To Invoice Qty</th>
                                        <th style="text-align: right" nowrap="nowrap"><t t-if="report_by == 'Detail'">Rate</t></th>
                                        <th style="text-align: right" nowrap="nowrap">Amount</th>
                                        <th style="text-align: right" nowrap="nowrap" groups="account.group_account_manager">T.Cost</th>
                                        <th style="text-align: right" nowrap="nowrap" groups="account.group_account_manager">Gross Profit</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <t t-foreach="lines(date_from, date_to, company_id.id, partner_id[0], user_id[0], 'all')" t-as="main">
                                        <t t-foreach="lines(date_from, date_to, company_id.id, partner_id[0], user_id[0], 'yes')" t-as="partner">
                                            <tr t-if="report_by == 'Detail'" style="color: red; font-weight: bold;">
                                                <td colspan="11"><span t-esc="partner['partner_name']"/></td>
                                                <td colspan="2" groups="account.group_account_manager"/>
                                            </tr>

                                            <tr t-if="report_by == 'Detail'" t-foreach="lines(date_from, date_to, company_id.id, partner['partner_id'], user_id[0], 'no')" t-as="line">
                                                <td />
                                                <td nowrap="nowrap"><span t-esc="line['date']"/></td>
                                                <td><span t-esc="line['order_no']"/></td>
                                                <td  nowrap="nowrap"><span t-esc="line['salesperson']"/></td>
                                                <td  nowrap="nowrap"><span t-esc="line['product']['en_US']"/></td>
                                                <td style="text-align: right"><span t-esc="'{0:,.2f}'.format(line['product_uom_qty'])"/></td>
                                                <td style="text-align: right"><span t-esc="'{0:,.2f}'.format(line['qty_delivered'])"/></td>
                                                <td style="text-align: right"><span t-esc="'{0:,.2f}'.format(line['qty_invoiced'])"/></td>
                                                <td style="text-align: right"><span t-esc="'{0:,.2f}'.format(line['qty_to_invoice'])"/></td>
                                                <td style="text-align: right">
                                                    <t t-set="rate" t-value="0"/>
                                                    <t t-set="rate" t-value="line['price_total']/line['product_uom_qty']" t-if="line['product_uom_qty'] and line['price_total']"/>
                                                    <span t-esc="'{0:,.2f}'.format(rate)"/>
                                                </td>
                                                <td style="text-align: right"><span t-esc="'{0:,.2f}'.format(line['price_total'])"/></td>
                                                <t t-set="cost" t-value="0"/>
                                                <t t-set="margin" t-value="0"/>

                                                <t t-if="line['cost']" t-set="cost" t-value="line['cost']"/>
                                                <t t-if="line['margin']" t-set="margin" t-value="line['margin']"/>

                                                <td groups="account.group_account_manager" style="text-align: right"><span t-esc="'{0:,.2f}'.format(cost)"/></td>
                                                <td groups="account.group_account_manager" style="text-align: right"><span t-esc="'{0:,.2f}'.format(margin)"/></td>
                                            </tr>

                                            <tr style="font-weight: bold">
                                                <td colspan="5">
                                                    <span t-esc="partner['partner_name']" t-if="report_by == 'Summary'"/>
                                                    <span t-if="report_by == 'Detail'" style="color: red; font-weight: bold;">TOTAL </span>
                                                </td>
                                                <td style="text-align: right">
                                                    <span t-if="report_by == 'Detail'" style="color: red; font-weight: bold;" t-esc="'{0:,.2f}'.format(partner['total_qty_ordered'])"/>
                                                    <span t-if="report_by == 'Summary'" t-esc="'{0:,.2f}'.format(partner['total_qty_ordered'])"/>
                                                </td>
                                                <td style="text-align: right">
                                                    <span t-if="report_by == 'Detail'" style="color: red; font-weight: bold;" t-esc="'{0:,.2f}'.format(partner['total_qty_delivered'])"/>
                                                    <span t-if="report_by == 'Summary'" t-esc="'{0:,.2f}'.format(partner['total_qty_delivered'])"/>
                                                </td>
                                                <td style="text-align: right">
                                                    <span t-if="report_by == 'Detail'" style="color: red; font-weight: bold;" t-esc="'{0:,.2f}'.format(partner['total_qty_invoiced'])"/>
                                                    <span t-if="report_by == 'Summary'" t-esc="'{0:,.2f}'.format(partner['total_qty_invoiced'])"/>
                                                </td>
                                                <td style="text-align: right">
                                                    <span t-if="report_by == 'Detail'" style="color: red; font-weight: bold;" t-esc="'{0:,.2f}'.format(partner['total_qty_to_invoice'])"/>
                                                    <span t-if="report_by == 'Summary'" t-esc="'{0:,.2f}'.format(partner['total_qty_to_invoice'])"/>
                                                </td>
                                                <td style="text-align: right"></td>
                                                <td style="text-align: right">
                                                    <span t-if="report_by == 'Detail'" style="color: red; font-weight: bold;" t-esc="'{0:,.2f}'.format(partner['total_amount'])"/>
                                                    <span t-if="report_by == 'Summary'" t-esc="'{0:,.2f}'.format(partner['total_amount'])"/>
                                                </td>
                                                <td style="text-align: right" groups="account.group_account_manager">
                                                    <span t-if="report_by == 'Detail'" style="color: red; font-weight: bold;" t-esc="'{0:,.2f}'.format(partner['total_cost'])"/>
                                                    <span t-if="report_by == 'Summary'" t-esc="'{0:,.2f}'.format(partner['total_cost'])"/>
                                                </td>

                                                <td style="text-align: right" groups="account.group_account_manager">
                                                    <span t-if="report_by == 'Detail'" style="color: red; font-weight: bold;" t-esc="'{0:,.2f}'.format(partner['total_margin'])"/>
                                                    <span t-if="report_by == 'Summary'" t-esc="'{0:,.2f}'.format(partner['total_margin'])"/>
                                                </td>
                                            </tr>

                                            <tr t-if="report_by == 'Detail'"><td colspan="11"/><td colspan="2" groups="account.group_account_manager"/></tr>
                                        </t>

                                        <tr style="font-weight: bold">
                                            <td colspan="5"/>
                                            <td style="text-align: right">
                                                <span t-esc="'{0:,.2f}'.format(main['total_qty_ordered_all'])"/>
                                            </td>
                                            <td style="text-align: right">
                                                <span t-esc="'{0:,.2f}'.format(main['total_qty_delivered_all'])"/>
                                            </td>
                                            <td style="text-align: right">
                                                <span t-esc="'{0:,.2f}'.format(main['total_qty_invoiced_all'])"/>
                                            </td>
                                            <td style="text-align: right">
                                                <span t-esc="'{0:,.2f}'.format(main['total_qty_to_invoice_all'])"/>
                                            </td>
                                            <td style="text-align: right"></td>
                                            <td style="text-align: right">
                                                <span t-esc="'{0:,.2f}'.format(main['total_amount_all'])"/>
                                            </td>
                                            <td style="text-align: right" groups="account.group_account_manager">
                                                <span t-esc="'{0:,.2f}'.format(main['total_cost_all'])"/>
                                            </td>
                                            <td style="text-align: right" groups="account.group_account_manager">
                                                <span t-esc="'{0:,.2f}'.format(main['total_margin_all'])"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>

                        </div> <!--container-->
                    </div> <!--page-->
                </t> <!--web.external_layout-->
            </t>
        </t> <!--web.html_container-->
    </template>
</odoo>
