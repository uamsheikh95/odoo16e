<odoo>
  <record model="ir.ui.view" id="policy_registeration_tree">
      <field name="name">mgs_slnia.policy_registeration.tree</field>
      <field name="model">mgs_slnia.policy_registeration</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="related_insurance_id"/>
          <field name="customer_id"/>
          <field name="description"/>
          <field name="policy_amount" sum="policy_amount" optional="hide"/>
          <field name="claim_amount" sum="claim_amount" optional="hide"/>
          <field name="premium_amount" sum="premium_amount" optional="hide"/>
          <field name="tax_amount" sum="tax_amount"/>
        </tree>
      </field>
    </record>

  <record model="ir.ui.view" id="policy_registeration_form">
    <field name="name">mgs_slnia.policy_registeration.form</field>
    <field name="model">mgs_slnia.policy_registeration</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <div class="oe_title">
            <h1><field name="name"/></h1>
          </div>
          <group>
            <group>
              <field name="related_insurance_id" options="{'no_create': True}"/>
              <field name="period_id" options="{'no_create': True}"/>
              <field name="currency_id" groups="base.group_multi_currency"/>
            </group>

            <group>
              <field name="customer_id" options="{'no_create': True}"/>
              <field name="description"/>
              <field name="api_id"/>
              <field name="company_id" groups="base.group_multi_company"/>
            </group>
          </group>

          <group>
            <group>
            </group>

            <group>
              <field name="policy_amount"/>
              <field name="claim_amount"/>
              <field name="premium_amount"/>
              <field name="tax_amount"/>
            </group>
          </group>
        </sheet>
        <div class="oe_chatter">
          <field name="message_follower_ids" widget="mail_followers"/>
          <field name="message_ids" widget="mail_thread"/>
        </div>
      </form>
    </field>
  </record>

  <record model="ir.ui.view" id="policy_registeration_search">
    <field name="name">mgs_slnia.policy_registeration.search</field>
    <field name="model">mgs_slnia.policy_registeration</field>
    <field name="arch" type="xml">
      <search>
        <field name="name" string="Reg#"/>
        <field name="related_insurance_id"/>
        <field name="customer_id"/>
        <group expand="0" string="Group By..." colspan="12" col="10">
          <filter string="Customer" name="customer_id" context="{'group_by': 'customer_id'}"></filter>
          <filter string="Insurance Organization" name="related_insurance_id" context="{'group_by': 'related_insurance_id'}"></filter>
        </group>
      </search>
    </field>
  </record>

  <record model="ir.actions.act_window" id="policy_registeration_action">
    <field name="name">Policy Registerations</field>
    <field name="res_model">mgs_slnia.policy_registeration</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Create the first policy
        </p>
    </field>
  </record>
</odoo>