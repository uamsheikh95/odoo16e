<odoo>
  <data>
    <record model="ir.ui.view" id="mgs_remittance_remitter_list">
      <field name="name">mgs_remittance.remitter.tree</field>
      <field name="model">mgs_remittance.remitter</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="mobile"/>
          <field name="email"/>
          <field name="country_id"/>
          <field name="city_id"/>
          <field name="id_no"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="mgs_remittance_remitter_form">
      <field name="name">mgs_remittance.remitter.form</field>
      <field name="model">mgs_remittance.remitter</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <div class="oe_title" style="float:left;width:50%;margin-top:20px">
              <h1><field name="name" string="Order#"/></h1>
            </div>
            <group>
              <group>
                <field name="mobile"/>
                <field name="country_id" options="{'no_create': True}"/>
                <field name="id_no"/>
              </group>

              <group>
                <field name="email"/>
                <field name="city_id" options="{'no_create': True}"/>
                <field name="partner_id" readonly="1"/>
              </group>
            </group>

            <notebook>
              <page string="Beneficiaries">
                <field name="transaction_line_ids" readonly="1">
                    <tree>
                      <field name="id" string="RID"/>
                      <field name="destination_company_partner_id"/>
                      <field name="beneficiary_id"/>
                      <field name="b_mobile"/>
                      <field name="b_country_id"/>
                      <field name="b_city_id"/>
                      <field name="journal_id"/>
                      <field name="amount"/>
                    </tree>
                </field>
              </page>
            </notebook>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers"/>
            <field name="message_ids" widget="mail_thread"/>
          </div>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="mgs_remittance_remitter_search">
      <field name="name">mgs_remittance.remitter.search</field>
      <field name="model">mgs_remittance.remitter</field>
      <field name="arch" type="xml">
        <search>
          <field name="name" string="Remitter"/>
          <field name="mobile"/>
          <field name="email"/>

          <group expand="0" string="Group By..." colspan="12" col="10">
            <filter string="Country" name="country_id" context="{'group_by': 'country_id'}"></filter>
            <filter string="City" name="city_id" context="{'group_by': 'city_id'}"></filter>
          </group>
        </search>
      </field>
    </record>

    <record model="ir.actions.act_window" id="mgs_remittance_remitter_action">
      <field name="name">Remitters</field>
      <field name="res_model">mgs_remittance.remitter</field>
      <field name="view_mode">tree,form</field>
    </record>
  </data>
</odoo>