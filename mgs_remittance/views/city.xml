<odoo>
  <record model="ir.ui.view" id="city_tree">
    <field name="name">mgs_remittance.city.tree</field>
    <field name="model">mgs_remittance.city</field>
    <field name="arch" type="xml">
      <tree string="City Tree">
        <field name="name" />
      </tree>
    </field>
  </record>

  <record model="ir.ui.view" id="city_form">
    <field name="name">mgs_remittance.city.form</field>
    <field name="model">mgs_remittance.city</field>
    <field name="arch" type="xml">
      <form string="City Form">
        <sheet>
          <group>
            <field name="name" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record model="ir.actions.act_window" id="city_action">
      <field name="name">Cities</field>
      <field name="res_model">mgs_remittance.city</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">Create city</p>
      </field>
  </record>
</odoo>