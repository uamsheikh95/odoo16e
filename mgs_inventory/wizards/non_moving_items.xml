<?xml version="1.0" encoding="utf-8"?>
<odoo>
		<record id="non_moving_items_form" model="ir.ui.view">
			<field name="name">mgs_inventory.non_moving_items.form</field>
			<field name="model">mgs_inventory.non_moving_items</field>
			<field name="arch" type="xml">
				 <form>
					<sheet>
						<group>
							<group>
								<field name="from_date" string = "From Date " required="1" />
								<field name="warehouse_id" string="Warehouse" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True}" />
                <field name="company_id" groups="base.group_multi_company" />
              </group>
							<group>
								<field name="to_date" string="To Date"/>
								<field name="stock_location_ids"  string="Location" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True}" widget="many2many_tags"/>
							</group>
						</group>
					</sheet>

				<footer>
					<button name="confirm" string="PDF" type="object" class="oe_highlight"/>
					<button name="export_to_excel" string="EXCEL" type="object" class="oe_highlight"/>
					<button string="Cancel" special="cancel"/>
				</footer>

				 </form>
			</field>
		</record>



		<record id="action_non_moving_items_form" model="ir.actions.act_window">
			<field name="name">MGS Non Moving Items Report</field>
			<field name="res_model">mgs_inventory.non_moving_items</field>
			<field name="type">ir.actions.act_window</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="non_moving_items_form"/>
			<field name="target">new</field>
		</record>


		<menuitem id="menu_non_moving_items" name="Non Moving Items" parent="mgs_inventory_root" action="action_non_moving_items_form" sequence="20" />

</odoo>
