<?xml version="1.0" encoding="utf-8"?>
<odoo>
		<record id="valuation_summary_form" model="ir.ui.view">
			<field name="name">mgs_inventory.valuation_summary.form</field>
			<field name="model">mgs_inventory.valuation_summary</field>
			<field name="arch" type="xml">
				 <form>
					<sheet>
						<group>
							<group>
								<field name="date"/>
                				<field name="company_id" groups="base.group_multi_company" />
							</group>
							<group>
								<field name="product_id" string="Product" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True}" />
                				<field name="categ_id" string="Category" options="{'no_create': True, 'no_quick_create': True, 'no_create_edit':True}" />
							</group>
						</group>

            <!-- <group>
              <field name="quant_ids" readonly = "1">
                <tree>
                  <field name="product_id"/>
                  <field name="quantity"/>
                  <field name="location_id"/>
                </tree>
              </field>
            </group> -->
					</sheet>

				<footer>
					<button name="confirm" string="PDF" type="object" class="oe_highlight"/>
					<button name="export_to_excel" string="EXCEL" type="object" class="oe_highlight"/>s
					<button string="Cancel" special="cancel"/>
				</footer>

				 </form>
			</field>
		</record>



		<record id="action_valuation_summary_form" model="ir.actions.act_window">
			<field name="name">MGS Valuation Summary Report</field>
			<field name="res_model">mgs_inventory.valuation_summary</field>
			<field name="type">ir.actions.act_window</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="valuation_summary_form"/>
			<field name="target">new</field>
		</record>


		<menuitem id="menu_valuation_summary" groups="account.group_account_manager" name="Inventory Valuation Summary" parent="mgs_inventory_root" action="action_valuation_summary_form" sequence="1" />

</odoo>
