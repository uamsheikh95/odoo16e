<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <report
        id="action_reserved_items_report"
        name="mgs_inventory.reserved_items_report"
        model="mgs_inventory.reserved_items_report"
        string="Reseved Items"
        report_type="qweb-html"
        paperformat="mgs_inventory_paperformat"
        />

        <template id="reserved_items_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.internal_layout" t-lang="en_US">
                        <div class="page">
                            <style>
                                .table th, td {
                                    border-top: 1.2px solid #7d7d7d;
                                    border-bottom: 1.2px solid #7d7d7d;
                                }
                            </style>

                            <div class="container">
                                <h2>Reserved Items</h2>

                                <div class="row" style="margin-top: 32px !important;font-size: 1.2em; font-family: 'Lato-Reg'">

                                    <div class="col-3" t-if="date">
                                        <strong>Date:</strong>
                                        <p t-esc="date"/>
                                    </div>

                                    <div class="col-3" t-if="partner_id[0]">
                                        <strong>Partner:</strong>
                                        <p class="m-0" t-esc="partner_id[1]"/>
                                    </div>

                                    <div class="col-3" t-if="product_id[0]">
                                        <strong>Product:</strong>
                                        <p class="m-0" t-esc="product_id[1]"/>
                                    </div>


                                    <div class="col-3" t-if="company_id"  groups="base.group_multi_company">
                                        <strong>Company:</strong>
                                        <p t-esc="company_id.name"/>
                                    </div>
                                </div>

                            <table class="table table-bordered table-sm">
                                <thead>
                                    <tr>
                                        <th nowrap="nowrap">Date</th>
                                        <th>Ref#</th>
                                        <th>Partner</th>
                                        <th>Product</th>
                                        <th style="text-align: right">Reserved Qutantity</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <t t-set="total_reserved_all" t-value="0"/>
                                    <!-- product_id, date, stock_location_ids, partner_id, sort_by, order_id, company_id -->
                                    <tr t-foreach="lines(product_id[0], date, stock_location_ids, partner_id[0], sort_by, order_id, company_id.id)" t-as="line">
                                        <!-- Variables -->
                                        <t t-set="total_reserved_all" t-value="total_reserved_all+line['reserved_qty']"/>
                                        <td nowrap="nowrap"><span t-esc="line['date']"/></td>
                                        <td><span t-esc="line['picking_id']"/><t t-if="line['origin']"> | <span t-esc="line['origin']"/></t></td>
                                        <td><span t-esc="line['partner_name']"/></td>
                                        <td><span t-esc="line['product_name']['en_US']"/></td>
                                        <td style="text-align: right"><span t-esc="'{0:,.2f}'.format(line['reserved_qty'])"/></td>
                                    </tr>

                                    <tr class="font-bold">
                                        <!-- <td colspan="5" nowrap="nowrap">Total</td>
                                        <td style="text-align: right">
                                            <span t-esc="'{0:,.2f}'.format(total_balance_all)"/>
                                        </td> -->
                                        <td colspan="4" nowrap="nowrap"><strong>Total</strong></td>
                                        <td style="text-align: right">
                                            <span t-esc="'{0:,.2f}'.format(total_reserved_all)"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                        </div> <!--container-->
                    </div> <!--page-->
                </t> <!--web.external_layout-->
            </t>
        </t> <!--web.html_container-->
    </template>
</odoo>
