<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <report
        id="action_invoice_detail"
        name="mgs_account.invoice_detail_report"
        model="mgs_account.invoice_detail_report"
        string="MGS Invoice Detail"
        report_type="qweb-html"
        paperformat="mgs_account_paperformat"
        />

        <template id="invoice_detail_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.internal_layout" t-lang="en_US">
                        <div class="page">
                            <style>
                                th, td {
                                    padding: 0.30rem !important;
                                    border-top: 1px solid #212529 !important;
                                    border-bottom: 1px solid #212529 !important;
                                }
                            </style>

                            <div class="container" style="font-size:12px;font-family:Arial;margin-top:1px;">
                                <h2>
                                    MGS <span t-esc="invoices_bills"/> Detail
                                </h2>

                                <div class="row" style="margin-top: 32px !important;font-size: 1.2em; font-family: 'Lato-Reg'">

                                    <div class="col-3" t-if="date_from or date_to">
                                        <strong>Date:</strong>
                                        <p t-esc="date_from" style="margin-bottom: 0"/>
                                        <p t-esc="date_to"/>
                                    </div>

                                    <div class="col-3" t-if="partner_id[0]">
                                        <strong>Partner:</strong>
                                        <p class="m-0" t-esc="partner_id[1]"/>
                                    </div>

                                    <div class="col-3" t-if="product_id[0]">
                                        <strong>Product:</strong>
                                        <p class="m-0" t-esc="product_id[1]"/>
                                    </div>

                                    <div class="col-3" t-if="team_id[0]">
                                        <strong>Salesteam:</strong>
                                        <p class="m-0" t-esc="team_id[1]"/>
                                    </div>

                                    <div class="col-3" t-if="user_id[0]">
                                        <strong>Salesman:</strong>
                                        <p class="m-0" t-esc="user_id[1]"/>
                                    </div>

                                    <div class="col-3" t-if="payment_term_id[0]">
                                        <strong>Payment Term:</strong>
                                        <p class="m-0" t-esc="payment_term_id[1]"/>
                                    </div>

                                    <div class="col-4" t-if="company_id"  groups="base.group_multi_company">
                                        <strong>Company:</strong>
                                        <span style="border: 1px solid black; padding: 1px; border-radius: 4px; background: #eeebeb; margin-right: 2px " t-esc="company_id.name"/>
                                    </div>


                            </div>

                            <table class="table table-condensed table-sm">
                                <thead>
                                    <tr>
                                        <th nowrap="nowrap">Date</th>
                                        <th>Number</th>
                                        <th>Partner</th>
                                        <th>Item</th>
                                        <th style="text-align: right">Quantity</th>
                                        <th style="text-align: right">Rate</th>
                                        <th style="text-align: right">Amount</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <t t-set="total_qty" t-value="0"/>
                                    <t t-set="total_amount" t-value="0"/>
                                    <tr t-foreach="lines(date_from, date_to, company_id.id, partner_id[0], product_id[0], team_id[0], user_id[0], payment_term_id[0], invoices_bills)" t-as="line">
                                        <td nowrap="nowrap"><span t-esc="line['date']"/></td>
                                        <td><span t-esc="line['ref']"/></td>
                                        <td><span t-esc="line['partner']"/></td>
                                        <td><span t-esc="line['product']"/></td>
                                        <td style="text-align: right"><span t-esc="'{0:,.2f}'.format(line['quantity'])"/></td>
                                        <td style="text-align: right">
                                            <t t-set="rate" t-value="0"/>
                                            <t t-set="rate" t-value="line['amount_total']/line['quantity']" t-if="line['quantity'] and line['amount_total']"/>
                                            <span t-esc="'{0:,.2f}'.format(rate)"/>
                                        </td>
                                        <td style="text-align: right"><span t-esc="'{0:,.2f}'.format(line['amount_total'])" t-if="line['amount_total']"/></td>

                                        <t t-set="total_qty" t-value="total_qty+line['quantity']"/>
                                        <t t-set="total_amount" t-value="total_amount+line['amount_total']"/>
                                    </tr>

                                    <tr style="font-weight: bold;font-size: 13px">
                                        <td colspan="4"></td>
                                        <td style="text-align: right"><span style="color: red; font-weight: bold;" t-esc="'{0:,.2f}'.format(total_qty)"/></td>
                                        <td style="text-align: right"></td>
                                        <td style="text-align: right"><span style="color: red; font-weight: bold;" t-esc="'{0:,.2f}'.format(total_amount)"/></td>
                                    </tr>
                                </tbody>
                            </table>

                        </div> <!--container-->
                    </div> <!--page-->
                </t> <!--web.external_layout-->
            </t>
        </t> <!--web.html_container-->
    </template>
</odoo>
